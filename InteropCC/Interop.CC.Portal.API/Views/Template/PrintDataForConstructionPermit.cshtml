
@model Interop.CC.Models.DTO.Institutions.DataForConstructionPermitDTO

<head>
    <style type="text/css">
        table, tr, td {
            border: 1px solid gray;
            padding: 5px;
            border-collapse: collapse;
        }

        th {
            border: 2px solid black;
            padding: 5px;
            border-collapse: collapse;
        }
    </style>
</head>
<div style="width: 100%;">

    <div style="float: left; width: 70%;">
        <img src="@Server.MapPath("~/Views/Template/grbMak.jpg")" style="float: left" alt="MIOA logo" />
        <label>Република Македонија</label>
        <h4 style="font-size:.6em;">Министерство за информатичко општество и администрација</h4>
    </div>
    <div style="float: right; width: 30%; font-size: .6em">
        <a style="margin-left: 80px;" href="http://www.interoperabilnost.gov.mk">www.interoperabilnost.gov.mk</a>

        <table class="table-striped" style="margin-top: 20px;">
            <thead style="display: table-row-group">

            </thead>
            <tbody style="font-size: .6em">
                <tr>
                    <td>Име на услугата:</td>
                    <td>@Model.ServiceName</td>
                </tr>
                <tr>
                    <td>Услугата ја користи:</td>
                    <td>@Model.ConsumerName</td>
                </tr>
                <tr>
                    <td>Услугата ја нуди:</td>
                    <td>@Model.ProviderName</td>
                </tr>
                <tr>
                    <td>Време на повик до услугата:</td>
                    <td>@Model.ServiceCalledTime.ToString("dd.MM.yyyy HH:mm")</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div style="height: 70px; width: 100%; float: left"></div>

<table class="row col-lg-12">
    <thead style="display: table-row-group">
        <tr id="row1">
            <th>Датум на архивирање</th>
            <th>Адреса на градба</th>
            <th>Опис на градба</th>
            <th>Тип на градба</th>
            <th>Ефективно од</th>
            <th>Пратено на</th>
            <th>Статус</th>
        </tr>
    </thead>
    <tbody>

        <tr>
            <td>@Model.ArchiveDate</td>
            <td>@Model.ConstructionAddress</td>
            <td>@Model.ConstructionDescription</td>
            <td>@Model.ConstructionTypeName</td>
            <td>@Model.EffectDate</td>
            <td>@Model.SendDate</td>
            <td>@Model.Status</td>
        </tr>

    </tbody>
</table>

<div style="height: 20px; width: 100%; float: left"></div>

<table class="table-striped">
    <label>Инвеститори</label>
    <thead style="display: table-row-group">
        <tr id="row1">
            <th>Име</th>
        </tr>

    </thead>
    <tbody>

        <tr>
            @foreach (var investor in Model.Investors)
            {
                <td>@investor</td>

            }
        </tr>
    </tbody>
</table>

<div style="height: 20px; width: 100%; float: left"></div>

<table class="table-striped">
    <label>Општини</label>
    <thead style="display: table-row-group">
        <tr id="row1">
            <th>Име</th>
            <th>Катастарски општини</th>
        </tr>

    </thead>
    <tbody>

        <tr>
            @foreach (var municipality in Model.Municipalities)
            {
                <td>@municipality.MunicipalityName</td>
                <td>
                    <table>
                        <thead style="display: table-row-group">
                            <tr id="row1">
                                <th>Име</th>
                                <th>Идентификационен број</th>
                            </tr>

                        </thead>
                        <tbody>

                            <tr>
                                @foreach (var cadas in municipality.CadastreMunicipalities)
                                {
                                    <td>@cadas.Ko</td>
                                    <td>@cadas.Kp</td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </td>
            }
        </tr>
    </tbody>
</table>


