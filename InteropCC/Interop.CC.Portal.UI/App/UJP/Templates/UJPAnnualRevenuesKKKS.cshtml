@inherits System.Web.Mvc.WebViewPage

<h2>Годишни приходи КККС - Управа за јавни приходи</h2>

<form name="ujpAnnualRevenueKKKSForm" ng-controller="UjpCtrl">

    <div class="container">
        <div class="col-lg-3">
            <div class="form-group" ng-class="{ 'has-error' : edbFormField.edb.$invalid }">
                <ng-form name="edbFormField">
                    <label for="edb">ЕДБ:</label>
                    <input id="edb" type="text" class="form-control" name="edb" ng-model="edb" only-digits required>
                </ng-form>
            </div>
            <div class="form-group" ng-class="{ 'has-error' : yearFormField.year.$invalid }">
                <ng-form name="yearFormField">
                    <label for="year">Година:</label>
                    <input id="year" type="text" class="form-control" name="year" ng-model="year" required>
                </ng-form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" ng-disabled="ujpAnnualRevenueKKKSForm.$invalid" ng-click="ujpAnnualRevenuesKKKS(edb, year)"><i class="fa fa-save"></i> Испрати</button>
                <a class="btn btn-warning" href="#/ujp/ujpannualrevenueskkks" ui-sref="ujpannualrevenueskkksindex">Откажи</a>
            </div>
        </div>

        <div ng-show="show" class="col-lg-9">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <button ng-show="!expandOps" ng-click="expandedOps()">+</button>
                            <button ng-show="expandOps" ng-click="expandedOps()">-</button>
                            Годишни Приходи КККС
                        </th>
                    </tr>
                    <tr ng-show="expandOps">
                        <th>ЕДБ</th>
                        <th>Име на обврзникот</th>
                        <th>Презиме на обврзникот</th>
                        <th>Година</th>
                        <th>Последна исплатене плата (месец/година)</th>
                        <th>Последна исплатена плата (бруто)</th>
                        <th>Последна исплатена плата (нето)</th>
                        <th>Последна исплатени плати во последни 6 месеци(број)</th>
                        <th>Последна исплатени плати во последни 6 месеци(бруто)</th>
                        <th>Последна исплатени плати во последни 6 месеци(нето)</th>
                        <th>Вкупно остварен годишен приход(бруто)</th>
                        <th>Вкупно остварен годишен приход(нето)</th>
                        <th>Остварен годишен приход по други основи(бруто)</th>
                        <th>Остварен годишен приход по други основи(нето)</th>
                        <th>Забелешка</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-show="expandOps">
                        <td>{{annualRevenueKKKS.edb}}</td>
                        <td>{{annualRevenueKKKS.firstName}}</td>
                        <td>{{annualRevenueKKKS.lastName}}</td>
                        <td>{{annualRevenueKKKS.year}}</td>
                        <td>{{annualRevenueKKKS.pospl_mmgg}}</td>
                        <td>{{annualRevenueKKKS.pospl_Bruto}}</td>
                        <td>{{annualRevenueKKKS.pospl_Neto}}</td>
                        <td>{{annualRevenueKKKS.mes6_Broj}}</td>
                        <td>{{annualRevenueKKKS.mes6_Bruto}}</td>
                        <td>{{annualRevenueKKKS.mes6_Neto}}</td>
                        <td>{{annualRevenueKKKS.vk_Bruto}}</td>
                        <td>{{annualRevenueKKKS.vk_Neto}}</td>
                        <td>{{annualRevenueKKKS.drugo_Bruto}}</td>
                        <td>{{annualRevenueKKKS.drugo_Neto}}</td>
                        <td>{{annualRevenueKKKS.zabeleska}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</form>