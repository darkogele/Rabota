@inherits System.Web.Mvc.WebViewPage

<h2>ПП ФПИОМ</h2>

<form name="ujpgetppfpiomForm" ng-controller="UjpCtrl">

    <div class="container">
        <div class="col-lg-3">
            <div class="form-group" ng-class="{ 'has-error' : ujpFormField.ujpDate.$invalid }">
                <ng-form name="ujpFormField">
                    <label for="ujp">Датум:</label>
                    <div class="">
                        <p class="input-group">
                            <input type="text"
                                   placeholder="Одбери"
                                   class="form-control"
                                   datepicker-popup="M.d.yyyy"
                                   ng-disabled="true"
                                   datepicker-append-to-body="true"
                                   ng-model="date"
                                   is-open="status1.opened"
                                   current-text="Денес"
                                   clear-text="Исчисти"
                                   close-text="Затвори"
                                   ng-click="status1.opened = true"
                                   required />
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-default" ng-click="open1($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                            </span>
                        </p>
                    </div>
                    <label>Број на дополнителни фајлови:</label>
                    <div class="">
                        <input type="number" min="1" class="form-control" id="number" placeholder="Внеси" ng-model="number" required>
                    </div>
                    <label>Дополнителен:</label>
                    <div class="">
                        <input type="checkbox" ng-model="checkboxAdditional.value" />
                    </div>
                </ng-form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" ng-disabled="ujpgetppfpiomForm.$invalid" ng-click="ujpgetppfpiom(date, number, 'pp', 'fpiom', checkboxAdditional.value)"><i class="fa fa-save"></i> Преземи</button>
                @*<a class="btn btn-warning" ui-sref="ujpgetouavrm">Откажи</a>*@
            </div>
        </div>
    </div>

</form>