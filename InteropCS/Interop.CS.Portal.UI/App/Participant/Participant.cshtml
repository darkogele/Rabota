@inherits System.Web.Mvc.WebViewPage

<div>
    <h2><i class="fa fa-university"></i> Учесници</h2>
    <div class="table">
        <hr ng-if="authentication.isAuth && authentication.permision">
        <div ng-if="authentication.isAuth && authentication.permision" class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="col-lg-4">
                    <a href="#/participant/new" ui-sref="createparticipant" class="btn btn-primary col-lg-6 col-md-2 col-sm-2 col-xs-5"><i class="fa fa-plus"></i> Креирај нов учесник</a>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-12 col-md-12 hidden-sm hidden-xs">
                <form class="ng-pristine ng-valid" name="searchParticipantsForm">
                    <div class="col-lg-3 col-md-3">
                        <input type="text" class="form-control pull-left ng-pristine ng-untouched ng-valid" placeholder="Код / Име на институција ..." ng-model="search.ParticipantCode">
                    </div>
                    <div class="col-lg-2 col-md-2">
                        <button type="submit" class="btn btn-primary col-lg-10 col-lg-offset-1 col-md-12 col-md-offset-0" ng-click="searchParticipants(search)"><i class="fa fa-search"> </i> Барај</button>
                    </div>
                    <div class="col-lg-2 col-md-2">
                        <button type="submit" class="btn btn-default col-lg-10 col-lg-offset-1 col-md-12 col-md-offset-0" ng-click="clearParticipants()"><i class="fa fa-eraser"> </i> Исчисти</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-xs-12 visible-sm visible-xs">
                <form class="ng-pristine ng-valid" name="searchParticipantsForm">
                    <div class="col-sm-6 col-xs-6">
                        <input type="text" class="form-control pull-left ng-pristine ng-untouched ng-valid" placeholder="Код" ng-model="search.ParticipantCode">
                    </div>
                    <div class="col-sm-6 col-xs-6">
                        <button type="submit" class="btn btn-primary col-sm-4 col-xs-12" ng-click="searchParticipants(search)"><i class="fa fa-search"> Барај</i></button>
                    </div>
                    <div class="row"></div><br />
                    <div class="col-sm-6 col-xs-6 col-sm-offset-6 col-xs-offset-6">
                        <button type="submit" class="btn btn-default col-sm-4 col-xs-12" ng-click="clearParticipants()"><i class="fa fa-eraser"> Исчисти</i></button>
                    </div>
                </form>
            </div>
        </div>
        <hr />
    </div>
    <div class="row" ng-show="totalItems != 0">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th ng-click="sort('code')" style="cursor:pointer;">
                                <u>
                                    Код на учесник
                                </u>
                                <span ng-show="sortDir == 'asc' && sortCol == 'code'" class="fa fa-caret-down"></span>
                                <span ng-show="sortDir == 'desc' && sortCol== 'code'" class="fa fa-caret-up"></span>
                            </th>
                            <th ng-click="sort('name')" style="cursor:pointer;">
                                <u>
                                    Име на учесник
                                </u>
                                <span ng-show="sortDir == 'asc' && sortCol == 'name'" class="fa fa-caret-down"></span>
                                <span ng-show="sortDir == 'desc' && sortCol== 'name'" class="fa fa-caret-up"></span>
                            </th>
                            <th ng-click="sort('uri')" style="cursor:pointer;">
                                <u>
                                    URI
                                </u>
                                <span ng-show="sortDir == 'asc' && sortCol== 'uri'" class="fa fa-caret-down"></span>
                                <span ng-show="sortDir == 'desc' && sortCol== 'uri'" class="fa fa-caret-up"></span>
                            </th>
                            <th ng-click="sortType = 'isActive'; sortReverse = !sortReverse" style="cursor:pointer;">
                                <u>
                                    Активен во системот
                                </u>
                                <span ng-show="sortType == 'isActive' && !sortReverse" class="fa fa-caret-down"></span>
                                <span ng-show="sortType == 'isActive' && sortReverse" class="fa fa-caret-up"></span>
                            </th>
                            <th>
                                Јавен клуч на учесник
                            </th>
                            <th ng-if="authentication.isAuth && authentication.permision"></th>
                            <th ng-if="authentication.isAuth && authentication.permision"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="participant in participants" ng-class="{selected: participant.code === selectedCode}" ng-click="setSelectedRow(participant.code)">
                            <td>{{participant.code}}</td>
                            <td>{{participant.name}}</td>
                            <td>{{participant.uri}}</td>
                            <td ng-if="participant.isActive">Да</td>
                            <td ng-if="!participant.isActive">Не</td>
                            <td>
                                <a ng-click="showPublicKey(participant.code, itemsPerPage, currentPage)" class="btn btn-info btn-xs"><i class="fa fa-info"></i> Детали </a>
                            </td>
                            <td ng-if="authentication.isAuth && authentication.permision">
                                <a ng-click="editParticipant(participant.code, itemsPerPage, currentPage, search.ParticipantCode)" class="btn btn-xs btn-primary"><i class="fa fa-pencil-square-o"></i> Измени </a>
                            </td>
                            @*<td ng-if="authentication.isAuth && authentication.permision">
                                    <button class="btn btn-danger btn-xs" ng-click-confirm-message="Дали сакате да го отстраните записот?" ng-click-confirm="$parent.deleteParticipant(participant.code)"><i class="fa fa-times"></i> Отстрани </button>
                                </td>*@
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="pull-left" ng-show="totalItems != 0">
            <div previous-text="Претходна" next-text="Следна" pagination total-items="totalItems" items-per-page="itemsPerPage" ng-model="currentPage" class="pagination-sm" ng-change="pageChangeHandler(currentPage)"></div>
        </div>
        <div class="pull-left">
            <select class="form-control" ng-show="totalItems != 0" name="participantsPerPage" ng-model="itemsPerPage" ng-change="pageSizeChanged(itemsPerPage)" style="margin: 18px 30px;">
                <option value="1">1</option>
                <option value="3">3</option>
                <option value="5">5</option>
                <option value="7">7</option>
                <option value="10" selected="selected">10</option>
            </select>
        </div>
        <div ng-show="totalItems != 0" class="pull-right">
            <strong>Вкупен број на записи: {{totalItems}}</strong>
        </div>
    </div>
    <div class="col-md-12 alert alert-warning" ng-show="totalItems == 0">
        <strong>Нема податоци</strong>
    </div>
</div>





