@inherits System.Web.Mvc.WebViewPage
<div>
    <div>
        <h2><i></i> Грешки</h2>
        <hr>
        <div class="row">
            <div class="col-lg-12">
                <form class="ng-pristine ng-valid" name="searchSoapFaultForm">
                    <div class="row">
                        <div class="col-lg-2 col-lg-offset-1 col-md-2 col-md-offset-1">
                            <input type="text" class="form-control" id="consumerId" placeholder="Трансакција" ng-model="filterTransaction">
                        </div>
                        <div class="col-lg-2 col-lg-offset-1 col-md-2 col-md-offset-1">
                            <p class="input-group">
                                <input type="text"
                                       placeholder="Од"
                                       class="form-control"
                                       datepicker-popup="d.M.yyyy"
                                       ng-disabled="true"
                                       datepicker-append-to-body="true"
                                       ng-model="fromDateSoap"
                                       is-open="status1.opened"
                                       max-date="maxFromDate"
                                       current-text="Денес"
                                       clear-text="Исчисти"
                                       close-text="Затвори"
                                       ng-click="status1.opened = true" />
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" ng-click="open1($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                                </span>
                            </p>
                        </div>
                        <div class="col-lg-2 col-md-2">
                            <p class="input-group">
                                <input type="text"
                                       placeholder="До"
                                       class="form-control"
                                       datepicker-popup="d.M.yyyy"
                                       ng-disabled="true"
                                       datepicker-append-to-body="true"
                                       ng-model="toDateSoap"
                                       is-open="status2.opened"
                                       current-text="Денес"
                                       clear-text="Исчисти"
                                       close-text="Затвори"
                                       min-date="minToDate"
                                       max-date="maxToDate"
                                       ng-click="status2.opened = true" />
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" ng-click="open2($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                                </span>
                            </p>
                        </div>
                        <div class="col-lg-2 col-md-2">
                            <a class="btn btn-primary col-lg-12 col-md-12 col-sm-12 col-xs-12" ng-click="filterHandlerSoap()"><i class="fa fa-search"></i> Барај</a>
                        </div>

                        <div class="col-lg-2 col-md-2">
                            <a class="btn btn-default col-lg-12 col-md-12 col-sm-12 col-xs-12" ng-click="filterClearSoap()"><i class="fa fa-eraser"></i> Исчисти</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
        <hr>
        <div class="col-sm-12">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th ng-click="sort('TransactionId')" style="cursor:pointer;">
                                <u>
                                    Трансакција
                                </u>
                                <span ng-show="sortCol == 'TransactionId' && sortDir=='asc'" class="fa fa-caret-down"></span>
                                <span ng-show="sortCol == 'TransactionId' && sortDir=='desc'" class="fa fa-caret-up"></span>
                            </th>
                            <th ng-click="sort('Reason')" style="cursor:pointer;">
                                <u>
                                    Причина
                                </u>
                                <span ng-show="sortCol == 'Reason' && sortDir=='asc'" class="fa fa-caret-down"></span>
                                <span ng-show="sortCol == 'Reason' && sortDir=='desc'" class="fa fa-caret-up"></span>
                            </th>
                            <th ng-click="sort('DateOccured')" style="cursor:pointer;">
                                <u>
                                    Дата на настанување
                                </u>
                                <span ng-show="sortCol == 'DateOccured' && sortDir=='asc'" class="fa fa-caret-down"></span>
                                <span ng-show="sortCol == 'DateOccured' && sortDir=='desc'" class="fa fa-caret-up"></span>
                            </th>
                            <th ng-click="sort('DateCreated')" style="cursor:pointer;">
                                <u>
                                    Дата на креирање
                                </u>
                                <span ng-show="sortCol == 'DateCreated' && sortDir=='asc'" class="fa fa-caret-down"></span>
                                <span ng-show="sortCol == 'DateCreated' && sortDir=='desc'" class="fa fa-caret-up"></span>
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <div style="text-align:center;">
                            <a href="#" class="btn btn-default" ng-click="exportAction()">
                                <span class="glyphicon glyphicon-floppy-save"></span> Превземи во PDF формат
                            </a>
                            <a href="#" class="btn btn-default" ng-click="exportActionToExcel()"><span class="glyphicon glyphicon-floppy-save"></span> Превземи во Excel формат</a>
                        </div>
                        <hr>
                        <tr ng-repeat="soapfault in soapFaults  | orderBy : sortType : sortReverse" ng-class="{'selected': $index==selectedRow}" ng-click="setClickedRow($index)">
                            <td>{{soapfault.transactionId}}</td>
                            <td>{{soapfault.reason}}</td>
                            <td>{{soapfault.dateOccured | date:'dd.MM.yyyy hh:mm:ss'}}</td>
                            <td>{{soapfault.dateCreated | date:'dd.MM.yyyy hh:mm:ss'}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <div class="col-md-12">
        <div class="pull-left">
            <div pagination total-items="totalSize" max-size="10" boundary-links="true" rotate="false" ng-show="totalSize != 0" items-per-page="pageSize" ng-model="pageIndex" class="pagination-sm" ng-change="pageChangeHandler(pageIndex)"></div>
        </div>
        <div class="pull-left">
            <select class="form-control" ng-show="totalSize != 0" name="soapfaultsPerPage" ng-model="itemsPerPage" ng-change="pageSizeChanged(itemsPerPage)" style="margin: 18px 30px;">
                <option value="1">1</option>
                <option value="3">3</option>
                <option value="5">5</option>
                <option value="7">7</option>
                <option value="10" selected="selected">10</option>
            </select>
        </div>
        <div ng-show="totalSize != 0" class="pull-right">
            <strong>Вкупен број на записи: {{totalSize}}</strong>
        </div>
        <div class="col-md-12 alert alert-warning" ng-show="totalSize == 0">
            <strong>Нема податоци</strong>
        </div>
    </div>
</div>