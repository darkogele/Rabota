@inherits System.Web.Mvc.WebViewPage

<h2><i class="fa fa-envelope"></i> Логови</h2>

<div class="table">
    <hr>
    <div class="row">
        <div class="col-lg-12">
            <form class="ng-pristine ng-valid" name="searchMessageLogForm">
                <div class="row">
                    <div class="col-lg-2 col-lg-offset-1 col-md-2 col-md-offset-1">
                        <input type="text" class="form-control" id="consumerId" placeholder="Корисник" ng-model="filterConsumer">
                    </div>
                    <div class="col-lg-2 col-md-2">
                        <input type="text" class="form-control" id="providerId" placeholder="Токен на рутирање" ng-model="filterProvider">
                    </div>
                    <div class="col-lg-2 col-md-2">
                        <input type="text" class="form-control" id="dir" placeholder="Насока" ng-model="filterDir">
                    </div>
                    <div class="col-lg-2 col-md-2">
                        <input type="text" class="form-control" id="service" placeholder="Сервис" ng-model="filterService">
                    </div>
                    <div class="col-lg-2 col-md-2">
                        <input type="text" class="form-control" id="method" placeholder="Метод" ng-model="filterMethod">
                    </div>
                </div>
            </form>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-2 col-lg-offset-1 col-md-2 col-md-offset-1">
            <p class="input-group">
                <input type="text"
                       placeholder="Од"
                       class="form-control"
                       datepicker-popup="d.M.yyyy"
                       ng-disabled="true"
                       datepicker-append-to-body="true"
                       ng-model="fromDate"
                       is-open="status1.opened"
                       max-date="maxFromDate"
                       min-date="minFromDate"
                       ng-click="status1.opened = true"
                       show-button-bar="false" />
                <span class="input-group-btn">
                    <button type="button" class="btn btn-default" ng-click="open1($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                </span>
            </p>
        </div>
        <div class="col-lg-2 col-md-2">
            <p class="input-group">
                <input type=" text"
                       placeholder="До"
                       class="form-control"
                       datepicker-popup="d.M.yyyy"
                       ng-disabled="true"
                       datepicker-append-to-body="true"
                       ng-model="toDate"
                       is-open="status2.opened"
                       min-date="minToDate"
                       max-date="maxToDate"
                       ng-click="status2.opened = true"
                       show-button-bar="false" />
                <span class="input-group-btn">
                    <button type="button" class="btn btn-default" ng-click="open2($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                </span>
            </p>
        </div>

        <div class="col-lg-2 col-lg-offset-2 col-md-2 col-md-offset-2">
            <a class="btn btn-primary col-lg-12 col-md-12 col-sm-12 col-xs-12" ng-click="filterHandler()"><i class=" fa fa-search"></i> Барај</a>
        </div>
        <div class="col-lg-2 col-md-2">
            <a class="btn btn-default col-lg-12 col-md-12 col-sm-12 col-xs-12" ng-click="filterClear()"><i class="fa fa-eraser"></i> Исчисти</a>
        </div>
    </div>
    <hr />
    <div class="row text-center">
        <a href="#" class="btn btn-default" ng-click="exportActionToExcel()">
            <span class="glyphicon glyphicon-floppy-save"></span> Превземи во Excel формат
        </a>
        <a href="#" class="btn btn-default" ng-click="exportAction()">
            <span class="glyphicon glyphicon-floppy-save"></span> Превземи во PDF формат
        </a>
    </div>
    <hr />
    <div class="row">
        <div class="row">
            <div class="col-sm-12">
                <div class="table-responsive">
                    <table class="table" id="messagelogs">
                        <thead>
                            <tr>
                                <th ng-click="sort('TransactionId')" style="cursor:pointer;">
                                    <u>
                                        Трансакција
                                    </u>
                                    <span ng-show="sortCol == 'TransactionId' && sortDir=='asc'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortCol == 'TransactionId' && sortDir=='desc'" class="fa fa-caret-up"></span>
                                </th>
                                <th ng-click="sort('Consumer')" style="cursor:pointer;">
                                    <u>
                                        Корисник
                                    </u>
                                    <span ng-show="sortCol == 'Consumer' && sortDir=='asc'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortCol == 'Consumer' && sortDir=='desc'" class="fa fa-caret-up"></span>
                                </th>
                                <th ng-click="sort('Provider')" style="cursor:pointer;">
                                    <u>
                                        Провајдер
                                    </u>
                                    <span ng-show="sortCol == 'Provider' && sortDir=='asc'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortCol == 'Provider' && sortDir=='desc'" class="fa fa-caret-up"></span>
                                </th>
                                <th ng-click="sort('RoutingToken')" style="cursor:pointer;">
                                    <u>
                                        Токен на рутирање
                                    </u>
                                    <span ng-show="sortCol == 'RoutingToken' && sortDir=='asc'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortCol == 'RoutingToken' && sortDir=='desc'" class="fa fa-caret-up"></span>
                                </th>
                                <th ng-click="sort('Service')" style="cursor:pointer;">
                                    <u>
                                        Сервис
                                    </u>
                                    <span ng-show="sortCol == 'Service' && sortDir=='asc'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortCol == 'Service' && sortDir=='desc'" class="fa fa-caret-up"></span>
                                </th>
                                <th ng-click="sort('ServiceMethod')" style="cursor:pointer;">
                                    <u>
                                        Метод
                                    </u>
                                    <span ng-show="sortCol == 'ServiceMethod' && sortDir=='asc'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortCol == 'ServiceMethod' && sortDir=='desc'" class="fa fa-caret-up"></span>
                                </th>
                                <th ng-click="sort('Dir')" style="cursor:pointer;">
                                    <u>
                                        Насока
                                    </u>
                                    <span ng-show="sortCol == 'Dir' && sortDir=='asc'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortCol == 'Dir' && sortDir=='desc'" class="fa fa-caret-up"></span>
                                </th>
                                <th ng-click="sort('Timestamp')" style="cursor:pointer;">
                                    <u>
                                        Временска ознака
                                    </u>
                                    <span ng-show="sortCol == 'Timestamp' && sortDir=='asc'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortCol == 'Timestamp' && sortDir=='desc'" class="fa fa-caret-up"></span>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="message in messageLogs  | orderBy : sortType : sortReverse" ng-class="{'selected': $index==selectedRow}" ng-click="setClickedRow($index)">
                                <td>{{message.transactionId}}</td>
                                <td>{{message.consumer}}</td>
                                <td>{{message.provider}}</td>
                                <td>{{message.routingToken}}</td>
                                <td>{{message.service}}</td>
                                <td>{{message.serviceMethod}}</td>
                                <td>{{message.dir}}</td>
                                <td>{{message.timestamp | date:'dd.MM.yyyy HH:mm:ss'}}</td>
                                <td class="text-center"><a ng-click="messageLogDetails(message.transactionId, message.dir, pageIndex, itemsPerPage, filterConsumer, filterProvider, filterDir, filterService, filterMethod)" class="btn btn-xs btn-info"><i class="fa fa-info"></i> Детали</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-12">
                <div class="pull-left">
                    <div pagination total-items="totalSize" max-size="10" boundary-links="true" rotate="false" ng-show="totalSize != 0" items-per-page="pageSize" ng-model="pageIndex" class="pagination-sm" ng-change="pageChangeHandler(pageIndex)"></div>
                </div>
                <div class="pull-left">
                    <select class="form-control" ng-show="totalSize != 0" name="servicesPerPage" ng-model="itemsPerPage" ng-change="pageSizeChanged(itemsPerPage)" style="margin: 18px 30px;">
                        <option value="10" selected="selected">10</option>
                        <option value="30">30</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </div>
                <div ng-show="totalSize != 0" class="pull-right">
                    <strong>Вкупен број на записи: {{totalSize}}</strong>
                </div>


            </div>
            <div class="col-md-12 alert alert-warning" ng-show="totalSize == 0">
                <strong>Нема податоци</strong>
            </div>
        </div>
    </div>
</div>
