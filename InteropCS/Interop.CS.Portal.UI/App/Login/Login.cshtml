@inherits System.Web.Mvc.WebViewPage

<div class="col-lg-5 col-lg-offset-3">
    <form name="loginForm" role="form" ng-controller="loginController">
        <h2 class="">Најава</h2>
        <div class="form-group" ng-class="{ 'has-error' : usernameFormField.username.$invalid }">
            <ng-form name="usernameFormField">
                <input type="text" class="form-control" placeholder="Корисничко име" name="username" data-ng-model="loginData.userName" required autofocus>
            </ng-form>
        </div>
        <div class="form-group" ng-class="{ 'has-error' : passwordFormField.password.$invalid }">
            <ng-form name="passwordFormField">
                <input type="password" class="form-control" placeholder="Лозинка" name="password" data-ng-model="loginData.password" required>
            </ng-form>
        </div>
        <div style="text-align: right"><a style="font-size: 12px;" ui-sref="forgotpassword()">Заборавена лозинка?</a></div><br/>
        <div class="modal-footer">
            <button class="btn btn-primary pull-left" type="submit" ng-disabled="loginForm.$invalid" data-ng-click="login()">Најави се</button>
        </div>
    </form>
</div>