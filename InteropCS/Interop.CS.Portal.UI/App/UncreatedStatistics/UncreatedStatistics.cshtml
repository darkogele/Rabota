@inherits System.Web.Mvc.WebViewPage

<h2>Неискреирани логови</h2>

<form name="uncreatedStatisticsForm">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group col-lg-3" ng-class="{ 'has-error' : participantFormField.participantDropdown.$invalid }">
                    <ng-form name="participantFormField">
                        <label for="participantDropdown" class="clearfix">Учесник: </label>
                        <select id="participantDropdown" ng-required="true" class="form-control" name="participantDropdown" ng-model="selectedParticipant">
                            <option value="" selected disabled>Одбери учесник...</option>
                            <option ng-repeat="(key,value) in participantsList" value="{{key}}">{{value}}</option>
                        </select>
                    </ng-form>
                </div>
                <div class="form-group col-lg-2">
                    <label for="forDate" class="clearfix">Датум: </label>
                    <p class="input-group">
                        <input type="text"
                               placeholder="Датум..."
                               class="form-control"
                               datepicker-popup="dd.MM.yyyy"
                               datepicker-append-to-body="true"
                               ng-model="forDate"
                               show-button-bar="false"
                               is-open="statusFrom.opened"
                               ng-click="statusFrom.opened = true"
                               ng-required="true" />
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-default" ng-click="openFrom($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                        </span>
                    </p>
                </div>

                <div class="modal-footer col-lg-12">
                    <button type="submit" class="btn btn-primary" ng-disabled="uncreatedStatisticsForm.$invalid" ng-click="createMessageLogStatistic(selectedParticipant, forDate)"><i class="fa fa-search"></i> Креирај</button>
                    <button class="btn btn-default" ng-click="clear()"><i class="fa fa-eraser"> </i> Исчисти</button>
                </div>
            </div>
        </div>
    </div>
</form>